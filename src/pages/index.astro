---
// src/pages/index.astro
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import {Button} from '@eliancodes/brutal-ui';
import {Card} from '@eliancodes/brutal-ui';
import {Pill} from '@eliancodes/brutal-ui';
import { RuxPopUpMenu } from '@astrouxds/rux-pop-up-menu/rux-pop-up-menu.js'
const builtWith = [
    {name: 'Andreu A', image:"/Andreu.jpg"},
    {name: 'Andreu G', image:"/Andreu-García.jpg"},
    {name: 'Pablo', image:"/Pablo-Rodriguez.jpg"},
    {name: 'Nerea', image:"/Nerea.jpg"},
    {name: 'Andrea', image:"/Andrea.JPG"},
];
---

<Layout
        title='Inicio'
        pageTitle='Web Exposición | Inicio'
        description='Web Exposición'
>
    <main class='bg-pink p-6'>
        <MobileSocials/>
        <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
            <h2 class='hidden'>About Brutal</h2>
            <div class='col-span-4'>
                <Card>
                    <div class='flex flex-col justify-between items-start gap-4'>
                        <p class='mt-4 dm-serif text-2xl md:text-5xl lg:text-7xl'>
                            Exposición PEP
                        </p>
                        <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
                            Para visitar toda la información de la exposición, haz clic en el botón de abajo.
                        </p>
                        <Button target={'_self'} href='/information/'>
                            Información &rarr;
                        </Button>
                    </div>
                </Card>
            </div>
            <div class='col-span-2 flex justify-center'>
                <Card>
                    <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 dm-serif'>
                        Somos:
                    </h2>
                    <ul class='flex gap-4 flex-wrap'>
                        {
                            builtWith.map((item) => (
                                    <li>
                                        <Pill>
                                            <a class="sanchez" href={item.image}>{item.name}</a>
                                        </Pill>
                                    </li>
                            ))
                        }
                    </ul>
                </Card>
            </div>
            <div class='col-span-2'>
                <Card>
                    <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
                        ¿Cuál es nuestro tema?
                    </h2>
                    <p class='poppins'>La distribuición de la riqueza que afecta al acceso de las comunidades y los
                        individuos a la igualdad de oportunidades.
                    </p>
                </Card>
            </div>
        </section>
        <RecentBlogPosts/>
    </main>
</Layout>
